<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <View
            android:id="@+id/color_0"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <View
            android:id="@+id/color_1"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <View
            android:id="@+id/color_2"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <View
            android:id="@+id/color_3"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <View
            android:id="@+id/color_4"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <View
            android:id="@+id/color_5"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <View
            android:id="@+id/color_6"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <View
            android:id="@+id/color_7"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <View
            android:id="@+id/color_8"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <View
            android:id="@+id/color_9"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <View
            android:id="@+id/color_10"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <View
            android:id="@+id/color_11"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <View
            android:id="@+id/color_12"
            android:layout_width="32dp"
            android:layout_height="32dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_0"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center_horizontal"
            android:text="0" />

        <TextView
            android:id="@+id/text_1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center_horizontal"
            android:text="10" />

        <TextView
            android:id="@+id/text_2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center_horizontal"
            android:text="50" />

        <TextView
            android:id="@+id/text_3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center_horizontal"
            android:text="100" />

        <TextView
            android:id="@+id/text_4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center_horizontal"
            android:text="200" />

        <TextView
            android:id="@+id/text_5"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center_horizontal"
            android:text="300" />

        <TextView
            android:id="@+id/text_6"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center_horizontal"
            android:text="400" />

        <TextView
            android:id="@+id/text_7"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center_horizontal"
            android:text="500" />

        <TextView
            android:id="@+id/text_8"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center_horizontal"
            android:text="600" />

        <TextView
            android:id="@+id/text_9"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center_horizontal"
            android:text="700" />

        <TextView
            android:id="@+id/text_10"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center_horizontal"
            android:text="800" />

        <TextView
            android:id="@+id/text_11"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center_horizontal"
            android:text="900" />

        <TextView
            android:id="@+id/text_12"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center_horizontal"
            android:text="1000" />

    </LinearLayout>

</LinearLayout>
